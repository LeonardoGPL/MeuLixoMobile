<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/baloo"
        android:text="MEU LIXO.COM"
        android:textColor="#665A48"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDescartar"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#EDE4E0"
        android:fontFamily="@font/baloo"
        android:includeFontPadding="false"
        android:text="QUERO DESCARTAR"
        android:textAlignment="center"
        android:textColor="#9F8772"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="#9F8772"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/buttonLocalDescarte"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#EDE4E0"
        android:fontFamily="@font/baloo"
        android:includeFontPadding="false"
        android:text="SOU UM LOCAL DE DESCARTE"
        android:textAlignment="center"
        android:textColor="#9F8772"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDescartar"
        app:strokeColor="#9F8772"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>