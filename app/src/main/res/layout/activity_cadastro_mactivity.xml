<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CadastroMActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="297dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/baloo"
                android:text="CADASTRO LOCAL DE DESCARTE"
                android:textAlignment="center"
                android:textColor="#665A48"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/baloo"
                android:text="MATERIAIS ACEITOS"
                android:textAlignment="center"
                android:textColor="#665A48"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/baloo"
                android:text="Filtrar categoria"
                android:textAlignment="center"
                android:textColor="#9F8772"
                android:textSize="20sp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:visibility="invisible" />

            <CheckBox
                android:id="@+id/checkBoxCelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Celular"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBoxMonitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Monitor"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBoxTablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Tablet"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBoxNotebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Notebook"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBoxMouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Mouse"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Celular"
                android:textColor="#7A7A7A" />

            <CheckBox
                android:id="@+id/checkBoxRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo"
                android:text="Radio"
                android:textColor="#7A7A7A" />

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#F0F0F0"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:text="ENVIAR"
                android:textAlignment="center"
                android:textColor="#7A7A7A"
                android:textSize="20sp"
                app:strokeColor="#7A7A7A"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/buttonVoltar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F0F0F0"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:text="VOLTAR"
                android:textAlignment="center"
                android:textColor="#7A7A7A"
                android:textSize="20sp"
                app:strokeColor="#7A7A7A"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>